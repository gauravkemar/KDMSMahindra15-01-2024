<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout 
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/profileAppBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/profileToolbar"
                android:layout_width="match_parent"
                app:navigationIcon="@drawable/ic_home_white"
                android:layout_height="?attr/actionBarSize">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_head"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PROFILE"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                   
                    

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/profileAppBarLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcvProfile1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardBackgroundColor="#ECECEC"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"

                    >
                    <TextView
                        android:id="@+id/tvFirstName"
                        android:layout_width="0dp"
                        android:padding="10dp"
                        android:text="First Name"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/medium_text"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        app:layout_constraintHorizontal_weight="0.32"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/view1"
                        />

                    <View
                        android:id="@+id/view1"
                        android:layout_width="1.5dp"
                        android:layout_height="0dp"
                        android:background="@color/lighter_grey_divider"
                        app:layout_constraintHorizontal_weight="0.02"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tvFirstName"
                        app:layout_constraintEnd_toStartOf="@+id/tvFirstNameValue"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <TextView
                        android:id="@+id/tvFirstNameValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/medium_text"
                        android:padding="10dp"
                        app:layout_constraintHorizontal_weight="0.66"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/view1"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcvProfile2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                app:layout_constraintTop_toBottomOf="@+id/mcvProfile1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardBackgroundColor="#ECECEC"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"

                    >
                    <TextView
                        android:id="@+id/tvLastName"
                        android:layout_width="0dp"
                        android:padding="10dp"
                        android:text="Last Name"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/medium_text"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        app:layout_constraintHorizontal_weight="0.32"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/view2"
                        />

                    <View
                        android:id="@+id/view2"
                        android:layout_width="1.5dp"
                        android:layout_height="0dp"
                        android:background="@color/lighter_grey_divider"
                        app:layout_constraintHorizontal_weight="0.02"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tvLastName"
                        app:layout_constraintEnd_toStartOf="@+id/tvLastNameValue"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <TextView
                        android:id="@+id/tvLastNameValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/medium_text"
                        android:padding="10dp"
                        app:layout_constraintHorizontal_weight="0.66"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/view2"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcvProfile3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                app:layout_constraintTop_toBottomOf="@+id/mcvProfile2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardBackgroundColor="#ECECEC"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"

                    >
                    <TextView
                        android:id="@+id/tvDealerCode"
                        android:layout_width="0dp"
                        android:padding="10dp"
                        android:text="Dealer Code"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/medium_text"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        app:layout_constraintHorizontal_weight="0.32"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/view3"
                        />

                    <View
                        android:id="@+id/view3"
                        android:layout_width="1.5dp"
                        android:layout_height="0dp"
                        android:background="@color/lighter_grey_divider"
                        app:layout_constraintHorizontal_weight="0.02"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tvDealerCode"
                        app:layout_constraintEnd_toStartOf="@+id/tvDealerCodeValue"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <TextView
                        android:id="@+id/tvDealerCodeValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/medium_text"
                        android:padding="10dp"
                        app:layout_constraintHorizontal_weight="0.66"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/view3"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcvProfile4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                app:layout_constraintTop_toBottomOf="@+id/mcvProfile3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardBackgroundColor="#ECECEC"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"

                    >
                    <TextView
                        android:id="@+id/tvDealerName"
                        android:layout_width="0dp"
                        android:padding="10dp"
                        android:text="Dealer Name"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/medium_text"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        app:layout_constraintHorizontal_weight="0.32"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/view4"
                        />

                    <View
                        android:id="@+id/view4"
                        android:layout_width="1.5dp"
                        android:layout_height="0dp"
                        android:background="@color/lighter_grey_divider"
                        app:layout_constraintHorizontal_weight="0.02"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tvDealerName"
                        app:layout_constraintEnd_toStartOf="@+id/tvDealerNameValue"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <TextView
                        android:id="@+id/tvDealerNameValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/medium_text"
                        android:padding="10dp"
                        app:layout_constraintHorizontal_weight="0.66"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/view4"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcvProfile5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                app:layout_constraintTop_toBottomOf="@+id/mcvProfile4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardBackgroundColor="#ECECEC"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"

                    >
                    <TextView
                        android:id="@+id/tvEmail"
                        android:layout_width="0dp"
                        android:padding="10dp"
                        android:text="Email"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/medium_text"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        app:layout_constraintHorizontal_weight="0.32"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/view5"
                        />

                    <View
                        android:id="@+id/view5"
                        android:layout_width="1.5dp"
                        android:layout_height="0dp"
                        android:background="@color/lighter_grey_divider"
                        app:layout_constraintHorizontal_weight="0.02"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tvEmail"
                        app:layout_constraintEnd_toStartOf="@+id/tvEmailValue"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <TextView
                        android:id="@+id/tvEmailValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/medium_text"
                        android:padding="10dp"
                        app:layout_constraintHorizontal_weight="0.66"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/view5"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcvProfile6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#ECECEC"
                android:layout_margin="10dp"
                android:clickable="true"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                app:layout_constraintTop_toBottomOf="@+id/mcvProfile5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"

                    >
                    <TextView
                        android:id="@+id/tvLogout"
                        android:layout_width="wrap_content"
                        android:padding="10dp"
                        android:text="Logout"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/medium_text"
                        android:drawablePadding="10dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_logout_black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
